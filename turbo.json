{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "ts/*.ts",
        "ts/*.tsx",
        "ts/**/*.ts",
        "ts/**/*.tsx",
        "!ts/*.spec.tsx?",
        "!ts/**/*.spec.tsx?",
        "!ts/*.stories.tsx?",
        "!ts/**/*.stories.tsx?"
      ],
      "outputs": [
        "cjs/**",
        "esm/**"
      ]
    },
    "clean": {
      "cache": false
    },
    "coverage": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "ts/*.ts",
        "ts/*.tsx",
        "ts/**/*.ts",
        "ts/**/*.tsx"
      ]
    },
    "depcheck": {
      "dependsOn": [
        "^build"
      ]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "dependsOn": [
        "^build"
      ]
    },
    "openapi:lint": {},
    "nuke": {
      "dependsOn": [
        "clean"
      ],
      "cache": false
    },
    "size": {
      "dependsOn": [
        "build"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "ts/*.ts",
        "ts/*.tsx",
        "ts/**/*.ts",
        "ts/**/*.tsx"
      ]
    },
    "verify": {
      "inputs": [
        "ts/*.ts",
        "ts/*.tsx",
        "ts/**/*.ts",
        "ts/**/*.tsx"
      ],
      "outputs": [
        "coverage/**",
        "cjs/**",
        "esm/**"
      ]
    },
    "watch": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "ts/*.ts",
        "ts/*.tsx",
        "ts/**/*.ts",
        "ts/**/*.tsx"
      ]
    }
  }
}
