{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "coverage": "turbo run coverage",
    "cs": "changeset",
    "depcheck": "turbo run depcheck",
    "dev": "turbo run dev --parallel",
    "iso-error": "yarn workspace iso-error",
    "lint": "turbo run lint",
    "nuke": "turbo run nuke",
    "nuke:local": "rimraf node_modules || true",
    "prepare": "husky install",
    "release": "turbo run build",
    "size": "turbo run size",
    "test": "turbo run test",
    "verify": "turbo run lint build coverage depcheck size",
    "watch": "jest --watch"
  },
  "devDependencies": {
    "@changesets/cli": "2.22.0",
    "@commitlint/cli": "16.2.4",
    "@commitlint/config-conventional": "16.2.4",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "eslint": "8.15.0",
    "eslint-plugin-harmony": "^6.0.0",
    "husky": "8.0.0",
    "jest": "28.1.0",
    "jest-progress-tracker": "3.0.4",
    "jest-validate": "28.1.0",
    "jest-watch-repeat": "2.0.0",
    "jest-watch-suspend": "1.1.2",
    "jest-watch-toggle-config": "2.0.1",
    "jest-watch-typeahead": "1.1.0",
    "npm-check-updates": "12.5.11",
    "rimraf": "3.0.2",
    "turbo": "latest",
    "typescript": "4.6.4"
  },
  "packageManager": "yarn@3.2.0"
}
