{
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"clean": "turbo run clean",
		"coverage": "turbo run coverage",
		"cs": "changeset",
		"depcheck": "turbo run depcheck",
		"dev": "turbo run dev --parallel",
		"gca": "pnpm --filter=google-cloud-api",
		"postinstall": "husky install",
		"iso": "pnpm --filter=iso-error",
		"iso-gca": "pnpm --filter=iso-error-google-cloud-api",
		"lint": "turbo run lint",
		"nuke": "turbo run nuke && rimraf node_modules",
		"openapi:lint": "turbo run openapi:lint",
		"prepack": "pinst --disable",
		"postpack": "pinst --enable",
		"release": "changeset publish",
		"size": "turbo run size",
		"test": "turbo run test",
		"verify": "turbo run lint build coverage depcheck size",
		"version": "changeset version",
		"web": "pnpm --filter=iso-error-web"
	},
	"devDependencies": {
		"@changesets/cli": "2.27.1",
		"@commitlint/cli": "18.4.3",
		"@commitlint/config-conventional": "18.4.3",
		"@redocly/cli": "^1.2.0",
		"eslint": "^8.39.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-harmony": "^7.1.2",
		"husky": "^8.0.2",
		"pinst": "^3.0.0",
		"turbo": "^1.9.3",
		"typescript": "^5.0.0"
	},
	"packageManager": "pnpm@8.12.0"
}
