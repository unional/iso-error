{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "coverage": "turbo run coverage",
    "cs": "changeset",
    "depcheck": "turbo run depcheck",
    "dev": "turbo run dev --parallel",
    "gca": "pnpm --filter=google-cloud-api",
    "postinstall": "husky install",
    "iso": "pnpm --filter=iso-error",
    "iso-gca": "pnpm --filter=iso-error-google-cloud-api",
    "iso-web": "pnpm --filter=iso-error-web",
    "lint": "turbo run lint",
    "openapi:lint": "turbo run openapi:lint",
    "nuke": "turbo run nuke",
    "nuke:local": "rimraf node_modules || true",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "release": "changeset publish",
    "size": "turbo run size",
    "test": "turbo run test",
    "verify": "turbo run lint build coverage depcheck size",
    "version": "changeset version && pnpm install",
    "watch": "jest --watch"
  },
  "devDependencies": {
    "@changesets/cli": "2.25.0",
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "eslint": "^8.21.0",
    "eslint-plugin-harmony": "^7.1.0",
    "husky": "^8.0.1",
    "jest": "^29.0.0",
    "jest-progress-tracker": "^3.0.4",
    "jest-validate": "^29.0.0",
    "jest-watch-repeat": "^2.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^2.0.0",
    "npm-check-updates": "^16.0.5",
    "pinst": "^3.0.0",
    "rimraf": "^3.0.2",
    "turbo": "^1.4.3",
    "typescript": "^4.7.4"
  },
  "packageManager": "pnpm@7.13.5"
}
