{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "coverage": "turbo run coverage",
    "cs": "changeset",
    "depcheck": "turbo run depcheck",
    "dev": "turbo run dev --parallel",
    "gca": "yarn workspace google-cloud-api",
    "iso": "yarn workspace iso-error",
    "iso-gca": "yarn workspace iso-error-google-cloud-api",
    "iso-web": "yarn workspace iso-error-web",
    "lint": "turbo run lint",
    "nuke": "turbo run nuke",
    "nuke:local": "rimraf node_modules || true",
    "prepare": "husky install",
    "version": "yarn cs version && yarn",
    "publish": "yarn workspaces foreach npm publish && yarn cs tags",
    "release": "turbo run build",
    "size": "turbo run size",
    "test": "turbo run test",
    "verify": "turbo run lint build coverage depcheck size",
    "watch": "jest --watch"
  },
  "devDependencies": {
    "@changesets/cli": "2.22.0",
    "@commitlint/cli": "17.0.1",
    "@commitlint/config-conventional": "17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "8.16.0",
    "eslint-plugin-harmony": "^7.1.0",
    "husky": "8.0.1",
    "jest": "28.1.0",
    "jest-progress-tracker": "3.0.4",
    "jest-validate": "28.1.0",
    "jest-watch-repeat": "2.0.0",
    "jest-watch-suspend": "1.1.2",
    "jest-watch-toggle-config": "2.0.1",
    "jest-watch-typeahead": "1.1.0",
    "npm-check-updates": "13.0.3",
    "rimraf": "3.0.2",
    "turbo": "latest",
    "typescript": "4.7.2"
  },
  "packageManager": "yarn@3.2.1"
}
