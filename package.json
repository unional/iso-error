{
  "name": "iso-error",
  "version": "0.0.0-development",
  "description": "An isomorphic error library",
  "homepage": "https://github.com/unional/iso-error",
  "bugs": {
    "url": "https://github.com/unional/iso-error/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/iso-error.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com"
  },
  "files": [
    "lib",
    "libm",
    "src"
  ],
  "main": "lib/index.js",
  "module": "libm/index.js",
  "jsnext:main": "libm/index.js",
  "typings": "libm/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.es5.json && tsc -p tsconfig.esnext.json",
    "clean": "rimraf lib libm *.tsbuildinfo",
    "codacy": "cat coverage/lcov.info | codacy-coverage",
    "coverage": "jest --coverage",
    "dc": "yarn dependency-check",
    "dependency-check": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev",
    "lint": "eslint --ext=js,ts .",
    "test": "jest --reporters=default",
    "verify": "yarn lint && yarn build && yarn dc && jest --coverage --reporters=default",
    "watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@semantic-release/changelog": "^3.0.6",
    "@unional/devpkg-node": "^1.4.2",
    "assertron": "^7.1.2",
    "codacy-coverage": "^3.4.0",
    "codecov": "^3.6.1",
    "commitlint-circle": "^1.0.0",
    "husky": "^4.0.2",
    "semantic-release": "^15.14.0",
    "type-plus": "^1.29.0"
  },
  "engines": {
    "node": ">= 8"
  }
}
