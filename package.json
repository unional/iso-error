{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "coverage": "turbo run coverage",
    "cs": "changeset",
    "depcheck": "turbo run depcheck",
    "dev": "turbo run dev --parallel",
    "gca": "yarn workspace google-cloud-api",
    "postinstall": "husky install",
    "iso": "yarn workspace iso-error",
    "iso-gca": "yarn workspace iso-error-google-cloud-api",
    "iso-web": "yarn workspace iso-error-web",
    "lint": "turbo run lint",
    "nuke": "turbo run nuke",
    "nuke:local": "rimraf node_modules || true",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "size": "turbo run size",
    "test": "turbo run test",
    "verify": "turbo run lint build coverage depcheck size",
    "version": "changeset version && yarn install",
    "publish": "yarn workspaces foreach npm publish --access public && changeset tag",
    "watch": "jest --watch"
  },
  "devDependencies": {
    "@changesets/cli": "2.23.1",
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.17.0",
    "eslint-plugin-harmony": "^7.1.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "jest-progress-tracker": "^3.0.4",
    "jest-validate": "^28.1.1",
    "jest-watch-repeat": "^2.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^2.0.0",
    "npm-check-updates": "^15.0.0",
    "pinst": "^3.0.0",
    "rimraf": "^3.0.2",
    "turbo": "^1.2.16",
    "typescript": "^4.7.3"
  },
  "packageManager": "yarn@3.2.1"
}
