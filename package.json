{
  "name": "iso-error",
  "version": "0.0.0-development",
  "description": "An isomorphic error library",
  "homepage": "https://github.com/unional/iso-error",
  "bugs": {
    "url": "https://github.com/unional/iso-error/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/iso-error.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com"
  },
  "sideEffects": false,
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "jsnext:main": "esm/index.js",
  "typings": "esm/index.d.ts",
  "files": [
    "cjs",
    "esm",
    "src"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json",
    "clean": "rimraf cjs esm lib libm *.tsbuildinfo",
    "coverage": "jest --coverage",
    "depcheck": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev",
    "lint": "eslint --ext=js,ts .",
    "test": "jest --reporters=default",
    "verify": "yarn lint && yarn build && yarn depcheck && size-limit && jest --coverage --reporters=default",
    "watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.5",
    "@babel/plugin-proposal-class-properties": "^7.16.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.16.5",
    "@babel/plugin-proposal-optional-chaining": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@size-limit/preset-small-lib": "^7.0.4",
    "@types/jest": "^27.0.3",
    "assertron": "^8.0.0",
    "dependency-check": "^4.1.0",
    "eslint": "^8.5.0",
    "eslint-plugin-harmony": "^6.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-junit": "^13.0.0",
    "jest-progress-tracker": "^3.0.1",
    "jest-validate": "^27.4.2",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^1.0.0",
    "npm-check-updates": "^12.0.5",
    "rimraf": "^3.0.2",
    "size-limit": "^7.0.4",
    "type-plus": "^3.14.0",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">= 10"
  },
  "size-limit": [
    {
      "limit": "5 kb"
    }
  ]
}
