{
  "name": "iso-error",
  "version": "0.0.0-development",
  "description": "An isomorphic error library",
  "homepage": "https://github.com/unional/iso-error",
  "bugs": {
    "url": "https://github.com/unional/iso-error/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/iso-error.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com"
  },
  "sideEffects": false,
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "jsnext:main": "esm/index.js",
  "typings": "esm/index.d.ts",
  "files": [
    "cjs",
    "esm",
    "src"
  ],
  "scripts": {
    "build": "run-p build:cjs build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "clean": "rimraf cjs esm lib libm *.tsbuildinfo",
    "coverage": "jest --coverage",
    "depcheck": "yarn dependency-check",
    "dependency-check": "run-p dependency-check:unused dependency-check:missing",
    "dependency-check:missing": "dependency-check . --missing --no-dev",
    "dependency-check:unused": "dependency-check . --unused --no-dev",
    "lint": "eslint --ext=js,ts .",
    "nuke": "yarn clean && rimraf node_modules",
    "release": "npx semantic-release",
    "size-limit": "size-limit",
    "test": "jest",
    "test:jsdom": "jest -c jest.config.jsdom.js",
    "verify": "run-p verify:build lint coverage",
    "verify:build": "npm-run-all clean build --parallel dependency-check size-limit",
    "watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@size-limit/preset-small-lib": "^7.0.5",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "assertron": "^9.0.0",
    "dependency-check": "^4.1.0",
    "eslint": "^8.6.0",
    "eslint-plugin-harmony": "^6.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "jest-junit": "^13.0.0",
    "jest-progress-tracker": "^3.0.1",
    "jest-validate": "^27.4.6",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "size-limit": "^7.0.5",
    "ts-jest": "^27.1.2",
    "type-plus": "^4.0.0",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">= 10"
  },
  "size-limit": [
    {
      "limit": "5 kb"
    }
  ]
}
