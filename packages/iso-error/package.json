{
  "name": "iso-error",
  "version": "4.3.6",
  "description": "An isomorphic error library",
  "homepage": "https://github.com/unional/iso-error/tree/main/packages/iso-error",
  "bugs": {
    "url": "https://github.com/unional/iso-error/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/iso-error.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    "import": "./esm/index.js",
    "require": "./cjs/index.js"
  },
  "main": "./cjs/index.js",
  "types": "./esm/index.d.ts",
  "files": [
    "cjs",
    "esm",
    "ts",
    "!ts/**/*.spec.ts",
    "!ts/testErrors.ts"
  ],
  "scripts": {
    "build": "npm-run-all ts:clean -p ts:build:cjs ts:build:esm ts:build:tslib",
    "clean": "rimraf .nyc_output .tsbuildinfo coverage cjs esm || true",
    "coverage": "jest --coverage",
    "depcheck": "depcheck",
    "lint": "cross-env TIMING=1 eslint --ext=js,ts .",
    "nuke": "run-s clean nuke:local",
    "nuke:local": "rimraf node_modules || true",
    "size": "size-limit",
    "test": "run-p test:node test:jsdom",
    "test:node": "jest",
    "test:jsdom": "jest -c jest.config.jsdom.cjs",
    "ts:build:cjs": "tsc -p tsconfig.cjs.json",
    "ts:build:esm": "tsc -p tsconfig.esm.json",
    "ts:build:tslib": "tsc -p tsconfig.tslib.json",
    "ts:clean": "rimraf .tsbuildinfo || true",
    "ts:test": "tsc",
    "verify": "npm-run-all -p build lint coverage depcheck -s size",
    "watch": "jest --watch"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.0.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.5",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "assertron": "^10.0.0",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.3",
    "eslint": "^8.21.0",
    "eslint-plugin-harmony": "^7.1.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "jest-validate": "^29.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "size-limit": "^8.0.0",
    "ts-jest": "^28.0.7",
    "tslib": "^2.4.0",
    "type-plus": "^4.11.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">= 10"
  }
}
