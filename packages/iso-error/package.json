{
  "name": "iso-error",
  "version": "6.0.0",
  "description": "An isomorphic error library",
  "homepage": "https://github.com/unional/iso-error/tree/main/packages/iso-error",
  "bugs": {
    "url": "https://github.com/unional/iso-error/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/iso-error.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    "import": "./esm/index.js",
    "require": "./cjs/index.js"
  },
  "main": "./cjs/index.js",
  "types": "./esm/index.d.ts",
  "files": [
    "cjs",
    "esm",
    "ts",
    "!ts/**/*.spec.ts",
    "!ts/testErrors.ts"
  ],
  "scripts": {
    "build": "npm-run-all ts:clean -p ts:build:cjs ts:build:esm ts:build:tslib",
    "clean": "rimraf .nyc_output .tsbuildinfo coverage cjs esm tslib",
    "coverage": "jest --coverage",
    "depcheck": "depcheck",
    "lint": "cross-env TIMING=1 eslint --ext=js,ts .",
    "nuke": "rimraf node_modules",
    "size": "size-limit",
    "test": "run-p test:node test:jsdom",
    "test:node": "jest",
    "test:jsdom": "jest -c jest.jsdom.mjs",
    "test:watch": "jest --watch",
    "ts:build:cjs": "tsc -p tsconfig.cjs.json && ncp ../../config/package.cjs.json cjs/package.json",
    "ts:build:esm": "tsc -p tsconfig.esm.json",
    "ts:build:tslib": "tsc -p tsconfig.tslib.json && ncp ../../config/package.cjs.json tslib/package.json",
    "ts:clean": "rimraf .tsbuildinfo",
    "ts:test": "tsc",
    "verify": "npm-run-all -p build lint coverage depcheck -s size",
    "watch": "jest --watch"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "assertron": "^11.1.1",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.3",
    "eslint": "^8.27.0",
    "eslint-plugin-harmony": "^7.1.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-validate": "^29.3.1",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^2.2.1",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "size-limit": "^8.1.0",
    "ts-jest": "^29.0.3",
    "tslib": "^2.4.1",
    "type-plus": "^5.0.0",
    "typescript": "^4.9.3"
  },
  "engines": {
    "node": ">= 10"
  }
}
