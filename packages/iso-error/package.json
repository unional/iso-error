{
  "name": "iso-error",
  "version": "4.2.0",
  "description": "An isomorphic error library",
  "homepage": "https://github.com/unional/iso-error/tree/main/packages/iso-error",
  "bugs": {
    "url": "https://github.com/unional/iso-error/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/iso-error.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com"
  },
  "sideEffects": false,
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "jsnext:main": "esm/index.js",
  "typings": "esm/index.d.ts",
  "files": [
    "cjs",
    "esm",
    "ts"
  ],
  "scripts": {
    "build": "npm-run-all ts:clean -p ts:build:cjs ts:build:esm",
    "clean": "rimraf .nyc_output *.tsbuildinfo coverage cjs esm lib || true",
    "coverage": "jest --coverage",
    "depcheck": "depcheck",
    "lint": "cross-env TIMING=1 eslint --ext=js,ts .",
    "nuke": "run-s clean nuke:local",
    "nuke:local": "rimraf node_modules || true",
    "size": "size-limit",
    "test": "jest",
    "ts:build:cjs": "tsc -p tsconfig.cjs.json",
    "ts:build:esm": "tsc -p tsconfig.esm.json",
    "ts:clean": "rimraf *.tsbuildinfo || true",
    "ts:test": "tsc",
    "verify": "npm-run-all -p build lint coverage depcheck -s size",
    "watch": "jest --watch"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.5",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "assertron": "^9.0.0",
    "cross-env": "7.0.3",
    "depcheck": "1.4.3",
    "eslint": "8.15.0",
    "eslint-plugin-harmony": "^7.0.0",
    "jest": "28.1.0",
    "jest-validate": "28.1.0",
    "jest-watch-suspend": "1.1.2",
    "jest-watch-toggle-config": "2.0.1",
    "jest-watch-typeahead": "1.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "size-limit": "^7.0.5",
    "ts-jest": "^28.0.1",
    "type-plus": "^4.0.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">= 10"
  },
  "size-limit": [
    {
      "limit": "5 kb"
    }
  ]
}
