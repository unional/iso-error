{
  "name": "iso-error-web",
  "version": "1.0.8",
  "description": "iso-error web extension",
  "homepage": "https://github.com/unional/iso-error/tree/main/packages/iso-error-web",
  "bugs": {
    "url": "https://github.com/unional/iso-error/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/iso-error.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    "import": "./esm/index.js",
    "require": "./cjs/index.js"
  },
  "main": "./cjs/index.js",
  "types": "./esm/index.d.ts",
  "files": [
    "cjs",
    "esm",
    "ts",
    "!ts/**/*.spec.ts"
  ],
  "scripts": {
    "build": "npm-run-all ts:clean ts:build:cjs ts:build:esm",
    "clean": "rimraf cjs esm lib libm .tsbuildinfo || true",
    "coverage": "jest --coverage",
    "depcheck": "depcheck",
    "lint": "cross-env TIMING=1 eslint --ext=js,ts .",
    "nuke": "run-s clean nuke:local",
    "nuke:local": "rimraf node_modules || true",
    "size": "size-limit",
    "test": "jest --reporters=default",
    "ts:build:cjs": "tsc -p tsconfig.cjs.json",
    "ts:build:esm": "tsc -p tsconfig.esm.json",
    "ts:clean": "rimraf .tsbuildinfo || true",
    "ts:test": "tsc",
    "verify": "npm-run-all -p build lint coverage depcheck -s size",
    "watch": "jest --watch"
  },
  "dependencies": {
    "iso-error": "workspace:*"
  },
  "devDependencies": {
    "@size-limit/file": "^7.0.8",
    "@size-limit/webpack": "^7.0.8",
    "@types/jest": "^28.0.0",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.3",
    "eslint": "^8.17.0",
    "eslint-plugin-harmony": "^7.1.0",
    "jest": "^28.1.1",
    "jest-validate": "^28.1.1",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "size-limit": "^7.0.8",
    "ts-jest": "^28.0.5",
    "type-plus": "^4.10.2",
    "typescript": "^4.7.3"
  },
  "engines": {
    "node": ">= 8"
  }
}
