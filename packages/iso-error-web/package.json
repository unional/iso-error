{
	"name": "iso-error-web",
	"version": "2.3.2",
	"description": "iso-error web extension",
	"homepage": "https://github.com/unional/iso-error/tree/main/packages/iso-error-web",
	"bugs": {
		"url": "https://github.com/unional/iso-error/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/unional/iso-error.git"
	},
	"license": "MIT",
	"author": {
		"name": "Homa Wong (unional)",
		"email": "homawong@gmail.com"
	},
	"sideEffects": false,
	"type": "module",
	"exports": {
		"import": "./esm/index.js",
		"require": "./cjs/index.js"
	},
	"main": "./cjs/index.js",
	"types": "./esm/index.d.ts",
	"files": [
		"cjs",
		"esm",
		"ts",
		"!ts/**/*.spec.ts"
	],
	"scripts": {
		"build": "npm-run-all ts:clean ts:build:cjs ts:build:esm",
		"clean": "rimraf coverage cjs esm lib libm .tsbuildinfo",
		"coverage": "jest --coverage",
		"depcheck": "depcheck",
		"lint": "cross-env TIMING=1 eslint --ext=js,ts .",
		"nuke": "rimraf node_modules",
		"size": "size-limit",
		"test": "jest --reporters=default",
		"test:watch": "jest --watch",
		"ts:build:cjs": "tsc -p tsconfig.cjs.json && ncp ../../config/package.cjs.json cjs/package.json",
		"ts:build:esm": "tsc -p tsconfig.esm.json",
		"ts:clean": "rimraf .tsbuildinfo",
		"ts:test": "tsc",
		"verify": "npm-run-all -p build lint coverage depcheck -s size",
		"watch": "jest --watch"
	},
	"dependencies": {
		"iso-error": "workspace:^"
	},
	"devDependencies": {
		"@size-limit/file": "^8.1.0",
		"@size-limit/webpack": "^8.1.0",
		"@types/jest": "^29.2.3",
		"@types/node": "^18.11.9",
		"@typescript-eslint/eslint-plugin": "^5.43.0",
		"cross-env": "^7.0.3",
		"depcheck": "^1.4.3",
		"eslint": "^8.27.0",
		"eslint-plugin-harmony": "^7.1.0",
		"jest": "^29.3.1",
		"jest-validate": "^29.3.1",
		"jest-watch-suspend": "^1.1.2",
		"jest-watch-toggle-config": "^2.0.1",
		"jest-watch-typeahead": "^2.2.1",
		"ncp": "^2.0.0",
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.2",
		"size-limit": "^8.1.0",
		"ts-jest": "^29.0.3",
		"type-plus": "^6.0.0",
		"typescript": "^5.0.0"
	},
	"engines": {
		"node": ">= 8"
	}
}
