{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"lib": ["ES2015", "ESNext.Promise"],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"newLine": "LF",
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"outDir": "cjs",
		"removeComments": false,
		"rootDir": "ts",
		"sourceMap": true,
		"strict": true,
		"stripInternal": true,
		"target": "ES2015",
		"tsBuildInfoFile": ".tsbuildinfo",
		"useDefineForClassFields": true
	},
	"references": [
		{
			"path": "../iso-error"
		}
	],
	"include": ["ts", "typings"]
}
